<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_centerInParent="true"
                android:src="@mipmap/default_icon"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:id="@+id/layout_liner_container"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="30dp"
                    android:id="@+id/tv_firstpage_login"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="登录"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="|"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:id="@+id/tv_firstpage_register"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:text="注册"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_firstpage_container"
            android:layout_width="match_parent"
            android:layout_height="700dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_firstpage_forget_psw"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:textColor="#FCFDFD"
        android:text="忘记密码？"
        android:textSize="14dp"
        android:padding="15dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
