<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_vote_manager_icon_manager"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="10dp"
        android:src="@mipmap/ic_dlg_has_course_remind" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_vote_manager_icon_manager"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vote_manager_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="投票标题"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_vote_manager_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/iv_vote_manager_icon_manager"
                android:text="2016/04/05 20:20" />
        </LinearLayout>

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/tv_vote_manager_verflag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核状态:未审核"
            android:textColor="@color/textcolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_vote_manager_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_vote_manager_icon_manager"
            android:layout_toRightOf="@+id/iv_vote_manager_icon_manager"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="投票内容"
            android:textColor="@color/tan" />
    </LinearLayout>


</RelativeLayout>