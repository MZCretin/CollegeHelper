<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_vote_details_id"
            android:textColor="@color/main_back_pressed"
            android:singleLine="true"
            android:paddingLeft="16dp"
            android:text="用户ID:13227293721"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingRight="16dp"
            android:id="@+id/tv_vote_details_time"
            android:textColor="@color/thistle"
            android:text="2016/04/05 20:20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_vote_details_title"
        android:textColor="@color/tomato"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp"
        android:text="投票标题"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_vote_details_des"
        android:textColor="@color/tan"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="投票描述"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_vote_details_content"
        android:textColor="@color/teal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:text="回复内容"
        android:maxLines="2"
        android:paddingTop="5dp"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>